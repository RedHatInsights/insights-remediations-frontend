{
  "name": "insights-remediations-frontend",
  "version": "0.1.0",
  "private": false,
  "repository": "https://github.com/RedHatInsights/insights-remediations-frontend",
  "engines": {
    "node": ">=22.9.0",
    "npm": ">=9"
  },
  "dependencies": {
    "@data-driven-forms/pf4-component-mapper": "^4.1.1",
    "@data-driven-forms/react-form-renderer": "^4.1.1",
    "@patternfly/patternfly": "^6.3.1",
    "@patternfly/react-charts": "^7.0.0",
    "@patternfly/react-component-groups": "^6.0.0",
    "@patternfly/react-core": "^6.3.1",
    "@patternfly/react-icons": "^6.3.1",
    "@patternfly/react-log-viewer": "^6.3.0",
    "@patternfly/react-table": "^6.3.1",
    "@patternfly/react-tokens": "^6.3.1",
    "@redhat-cloud-services/frontend-components": "^7.0.5",
    "@redhat-cloud-services/frontend-components-notifications": "^6.1.7",
    "@redhat-cloud-services/frontend-components-utilities": "^7.0.5",
    "@redhat-cloud-services/host-inventory-client": "^4.1.0",
    "@redhat-cloud-services/javascript-clients-shared": "^2.0.5",
    "@redhat-cloud-services/remediations-client": "^3.1.6",
    "@redhat-cloud-services/sources-client": "^3.0.1",
    "@unleash/proxy-client-react": "^4.5.2",
    "axios": "^1.7.7",
    "bastilian-tabletools": "^2.11.0",
    "classnames": "^2.3.1",
    "p-all": "^5.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-redux": "^7.2.9",
    "react-router-dom": "^6.8.1",
    "redux": "^4.2.0",
    "redux-logger": "^3.0.6",
    "redux-promise-middleware": "^6.1.2",
    "urijs": "^1.19.11",
    "use-deep-compare": "^1.3.0",
    "victory": "^37.3.6"
  },
  "sassIncludes": {
    "patternfly": "node_modules/patternfly/dist/sass",
    "bootstrap": "node_modules/patternfly/node_modules/bootstrap-sass/assets/stylesheets",
    "fontAwesome": "node_modules/patternfly/node_modules/font-awesome-sass/assets/stylesheets"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(uuid|@redhat-cloud-services|p-all|p-map|aggregate-error|indent-string|clean-stack|bastilian-tabletools|lodash)/)"
    ],
    "moduleNameMapper": {
      "\\.(css|scss|svg)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/config/setupTests.js"
    ],
    "roots": [
      "<rootDir>/src/"
    ],
    "coverageDirectory": "coverage-jest"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/runtime": "^7.27.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@redhat-cloud-services/eslint-config-redhat-cloud-services": "^3.0.0",
    "@redhat-cloud-services/frontend-components-config": "^6.6.11",
    "@redhat-cloud-services/tsc-transform-imports": "^1.0.7",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^15.0.7",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^14.5.2",
    "babel-loader": "^9.2.1",
    "babel-plugin-istanbul": "^6.1.1",
    "eslint": "^9.35.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsdoc": "^55.0.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.6.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-fetch-mock": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "redux-mock-store": "^1.5.4",
    "stylelint": "^16.24.0",
    "stylelint-config-recommended-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "ts-patch": "^3.1.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.32.0"
  },
  "scripts": {
    "build": "fec build",
    "coverage": "curl -sSL 'https://raw.githubusercontent.com/RedHatInsights/insights-interact-tools/refs/heads/main/scripts/coverage.sh' | bash",
    "lint": "npm-run-all lint:*",
    "lint:fix": "eslint src config --fix",
    "lint:js": "eslint config src",
    "lint:sass": "stylelint 'src/**/*.scss' --config .stylelintrc.json",
    "nightly": "npm run ci:verify",
    "postinstall": "ts-patch install",
    "test": "TZ=UTC jest --verbose --no-cache",
    "test:coverage": "curl -sSL 'https://raw.githubusercontent.com/RedHatInsights/insights-interact-tools/refs/heads/main/scripts/coverage.sh' | bash",
    "test:jest": "jest --passWithNoTests --env=jsdom",
    "static": "fec static",
    "ci:verify": "npm run test:coverage",
    "server:ctr": "node src/server/generateServerKey.js",
    "start": "fec dev",
    "start:proxy": "PROXY=true fec dev",
    "verify": "npm-run-all build lint test:jest"
  },
  "insights": {
    "appname": "remediations"
  },
  "nyc": {
    "include": [
      "src/**/*.{js,jsx}"
    ],
    "exclude": [
      "src/**/*.test.js",
      "src/**/*.cy.js"
    ]
  }
}
